<header class="navbar navbar-expand-lg bg-success sticky-top z-3">
    <div class="container-fluid">
        <a class="navbar-brand text-white fw-bold" href="{{ path('app_home') }}">
            EcoRide
        </a>

        <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNavbar">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link text-white {% if app.request.get('_route') == 'app_home' %}active fw-bold text-success-emphasis{% endif %}" href="{{ path('app_home') }}">
                        <i class="bi bi-house p-1"></i> Accueil
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white {% if app.request.get('_route') starts with 'app_search' %}active fw-bold text-success-emphasis{% endif %}" href="{{ path('app_search') }}">
                        <i class="bi bi-map p-1"></i> Covoiturages
                    </a>
                </li>
                {# Si utilisateur connecté et ROLE_EMPLOYEE #}
                {% if is_granted('ROLE_EMPLOYEE') %}
                    <li class="nav-item">
                        <a class="nav-link text-white {% if app.request.get('_route') == 'employee_signalements' %}active fw-bold text-success-emphasis{% endif %}" href="{{ path('employee_signalements') }}">
                            <i class="bi bi-hourglass-split"></i> Signalements en attente
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white {% if app.request.get('_route') == 'employee_signalements_valides' %}active fw-bold text-success-emphasis{% endif %}" href="{{ path('employee_signalements_valides') }}">
                            <i class="bi bi-check-circle"></i> Signalements validés
                        </a>
                    </li>
                {% endif %}
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link text-white {% if app.request.get('_route') == 'app_car_sharing_new' %}active fw-bold text-success-emphasis{% endif %}" href="{{ path('app_car_sharing_new') }}">
                            <i class="bi bi-plus-lg p-1"></i> Proposer
                        </a>
                    </li>
                    {% if is_granted('ROLE_CHAUFFEUR') %}
                        <li class="nav-item">
                            <a class="nav-link text-white {% if app.request.get('_route') == 'app_driver_dashboard' %}active fw-bold text-success-emphasis{% endif %}" href="{{ path('app_driver_dashboard') }}">
                                <i class="bi bi-car-front-fill p-1"></i> Historique
                            </a>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link text-white {% if app.request.get('_route') == 'app_user_dashboard' %}active fw-bold text-success-emphasis{% endif %}" href="{{ path('app_user_dashboard') }}">
                            <i class="bi bi-person-fill p-1"></i> Profil
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</header>
