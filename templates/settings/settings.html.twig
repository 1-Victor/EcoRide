{% extends 'base.html.twig' %}

{% block title %}Paramètres{% endblock %}

{% block body %}
{% include 'components/menu.html.twig' %}

<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow-lg" style="width: 100%; max-width: 600px;">
        <div class="card-header bg-light">
            <h4 class="mb-0">
                <i class="bi bi-gear-wide-connected me-2 text-secondary"></i>Paramètres de votre compte
            </h4>
        </div>
        <ul class="list-group list-group-flush">

            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <i class="bi bi-envelope-at-fill text-primary me-2"></i>
                    <strong>Contacter l'équipe</strong><br>
                    <small class="text-muted">Nous poser une question ou signaler un problème.</small>
                </div>
                <a href="#" class="btn btn-sm btn-outline-primary">Accéder</a>
            </li>

            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <i class="bi bi-box-arrow-right text-danger me-2"></i>
                    <strong>Se déconnecter</strong><br>
                    <small class="text-muted">Met fin à votre session actuelle.</small>
                </div>
                <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-danger">Déconnexion</a>
            </li>

        </ul>
        <div class="card-footer text-end text-muted small">
            EcoRide • {{ "now"|date("Y") }}
        </div>
    </div>
</div>
{% endblock %}
