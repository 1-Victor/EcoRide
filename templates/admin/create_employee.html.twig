{% extends 'base.html.twig' %}

{% block title %}Employ√©s{% endblock %}

{% block body %}
{% include 'components/menu_admin.html.twig' %}

<div class="container mt-5">
    <h2 class="mb-4">Gestion des Employ√©s</h2>

    <!-- Onglets -->
    <ul class="nav nav-tabs" id="employeeTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="form-tab" data-bs-toggle="tab" data-bs-target="#form-tab-pane" type="button" role="tab">
                ‚ûï Cr√©er un employ√©
            </button>
        </li>
        <li class="nav-item" role="presentation">
