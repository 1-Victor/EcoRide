{% extends 'base.html.twig' %}

{% block title %}D√©tail du covoiturage{% endblock %}

{% block body %}
{% include 'components/menu.html.twig' %}

<div class="container py-5">

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">D√©tail du trajet</h2>

    {# Bouton participation #}
    {% if not app.user %}
        <a href="{{ path('app_login') }}" class="btn btn-warning">
            Se connecter pour participer
        </a>
    {% elseif carSharing.availablePlaces == 0 %}
        <div class="alert alert-danger mb-0 ms-3">Plus aucune place disponible.</div>
    {% elseif app.user.credit < carSharing.price %}
        <div class="alert alert-danger mb-0 ms-3">Vous n'avez pas assez de cr√©dits pour participer.</div>
    {% else %}
        <a href="{{ path('carsharing_participate', { id: carSharing.id }) }}" class="btn btn-primary">
            Participer √† ce covoiturage
        </a>
    {% endif %}
</div>

    {# Trajet #}
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">
                {{ carSharing.startAddress }} ‚Üí {{ carSharing.endAddress }}
                {% if carSharing.ecoFriendly %}
                    <span class="badge bg-success ms-2">üå± √âco</span>
                {% else %}
                    <span class="badge bg-danger ms-2">‚ùå Non √âco</span>
                {% endif %}
            </h5>
            <p class="card-text">
                <strong>Date de d√©part :</strong> {{ carSharing.dateStart|date('d/m/Y H:i') }}<br>
                <strong>Date d‚Äôarriv√©e :</strong> {{ carSharing.dateEnd|date('d/m/Y H:i') }}<br>
                <strong>Prix :</strong> {{ carSharing.price }} ‚Ç¨<br>
                <strong>Places disponibles :</strong> {{ carSharing.availablePlaces }} / {{ carSharing.totalPlaces }}
            </p>
        </div>
    </div>

    {# Conducteur #}
    <div class="card mb-4">
        <div class="card-body">
            <h5>Conducteur</h5>
            {% if carSharing.user.imageName %}
                <a href="{{ path('user_profile', { id: carSharing.user.id }) }}">
                    <img src="{{ asset('uploads/users/image_profile/' ~ carSharing.user.imageName) }}"
                        alt="Photo de {{ carSharing.user.username }}"
                        class="rounded-circle mb-2"
                        style="width: 60px; height: 60px; object-fit: cover;">
                </a>
            {% endif %}
            <p>
                <a href="{{ path('user_profile', { id: carSharing.user.id }) }}" class="text-dark text-decoration-none">
                    <strong>{{ carSharing.user.firstname }} {{ carSharing.user.lastname }}</strong>
                </a><br>
                Pseudo : {{ carSharing.user.username }}<br>
                T√©l√©phone : {{ carSharing.user.phone }}
            </p>

            <h4 class="mt-4">üöç Passagers ({{ carSharing.participants|length }})</h4>
            <ul class="list-group mb-4">
                {% for participant in carSharing.participants %}
                    <li class="list-group-item d-flex align-items-center">
                        {% if participant.imageName %}
                            <a href="{{ path('user_profile', { id: participant.id }) }}">
                                <img src="{{ asset('uploads/users/image_profile/' ~ participant.imageName) }}"
                                    alt="Photo de {{ participant.username }}"
                                    class="rounded-circle me-3"
                                    style="width: 50px; height: 50px; object-fit: cover;">
                            </a>
                        {% endif %}
                        <div>
                            <a href="{{ path('user_profile', { id: participant.id }) }}" class="text-dark text-decoration-none">
                                <strong>{{ participant.firstname|upper }} {{ participant.lastname|upper }}</strong> 
                                {% if app.user and app.user.id == participant.id %}
                                    <span>(vous)</span>
                                {% endif %}
                            </a><br>
                            üéµ Pseudo : {{ participant.username }}<br>
                            ‚≠ê Note : {{ participant.getAverageRating() }}/5
                        </div>
                    </li>
                {% endfor %}
            </ul>

            <h6>Pr√©f√©rences du conducteur :</h6>
            {% if carSharing.user.userPreferences is empty %}
                <p>Aucune pr√©f√©rence enregistr√©e.</p>
            {% else %}
                <ul>
                    {% for userPref in carSharing.user.userPreferences %}
                        <li>{{ userPref.preference.name }}</li>
                    {% endfor %}
                </ul>
            {% endif %}

            <h6 class="mt-4">üìù Avis re√ßus pendant ce trajet :</h6>
            {% set avis = carSharing.user.reviewsReceived|filter(r => r.carSharing.id == carSharing.id and r.isValidated()) %}
            {% if avis is empty %}
                <div class="alert alert-info">Aucun avis n‚Äôa encore √©t√© laiss√© pour ce trajet.</div>
            {% else %}
                <ul class="list-group">
                    {% for review in avis %}
                        <li class="list-group-item">
                            ‚≠ê {{ review.rating }}/5 ‚Äì <em>{{ review.comment }}</em><br>
                            üßç Auteur :
                            <a href="{{ path('user_profile', { id: review.author.id }) }}">
                                <strong>{{ review.author.firstname }} {{ review.author.lastname }}</strong>
                            </a><br>
                            üïì Le : {{ review.createdAt|date('d/m/Y H:i') }}
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}

            {% if app.user and carSharing.participants.contains(app.user) %}
                <div class="mt-4">
                    <a href="{{ path('review_add', { id: carSharing.id }) }}" class="btn btn-outline-primary">
                        ‚úçÔ∏è Laisser un avis sur ce trajet
                    </a>
                </div>
            {% endif %}
        </div>
    </div>

    {# V√©hicule #}
    <div class="card mb-4">
        <div class="card-body">
            <h5>V√©hicule</h5>
            <p>
                <strong>Marque :</strong> {{ carSharing.vehicle.brand }}<br>
                <strong>Mod√®le :</strong> {{ carSharing.vehicle.model }}<br>
                <strong>√ânergie :</strong> {{ carSharing.vehicle.energy.name }}
                {% if carSharing.vehicle.energy.name == '√âlectrique' %}
                    <span class="badge bg-success ms-2">üå± √âco</span>
                {% else %}
                    <span class="badge bg-danger ms-2">‚ùå Non √âco</span>
                {% endif %}
            </p>

            <h6>üîã D√©tails techniques</h6>
            <ul>
                <li><strong>Type :</strong> {{ carSharing.vehicle.energy.name }}</li>
                <li><strong>Autonomie :</strong> {{ carSharing.vehicle.energy.autonomyKm }} km</li>
                <li><strong>√âmissions CO‚ÇÇ :</strong> {{ carSharing.vehicle.energy.co2Emission }} g/km</li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}