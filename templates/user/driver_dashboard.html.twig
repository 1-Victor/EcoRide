{% extends 'base.html.twig' %}

{% block title %}Espace Chauffeur - Mes trajets{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4">🧑‍✈️ Espace Chauffeur</h2>

    <div class="mb-4">
        <a href="{{ path('app_car_sharing_new') }}" class="btn btn-success">
            ➕ Proposer un nouveau trajet
        </a>
    </div>

    {% if carSharings is not empty %}
        <ul class="list-group">
            {% for trajet in carSharings %}
                <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            🚗 <strong>{{ trajet.startCity }}</strong> → <strong>{{ trajet.endCity }}</strong><br>
                            📅 Départ : {{ trajet.dateStart|date('d/m/Y H:i') }}<br>
                            💶 Prix : {{ trajet.price }} crédits
                        </div>
                        <div class="text-end">
                            <a href="{{ path('app_trajet_show', { id: trajet.id }) }}" class="btn btn-outline-primary btn-sm">Voir</a>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <div class="alert alert-info">
            Vous n'avez pas encore proposé de covoiturage.
        </div>
    {% endif %}
</div>
{% endblock %}
