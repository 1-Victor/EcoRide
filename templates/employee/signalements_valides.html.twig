{% extends 'base.html.twig' %}

{% block title %}Signalements Valid√©s{% endblock %}

{% block body %}
    {% include 'components/menu.html.twig' %}

    <div class="container py-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-success text-white rounded-top-4">
                <h4 class="mb-0">üìã Signalements Valid√©s (Trajets mal pass√©s)</h4>
            </div>

            <div class="card-body p-4">
                {% if signalements is empty %}
                    <div class="alert alert-info">Aucun signalement valid√©.</div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th># Trajet</th>
                                    <th>Chauffeur</th>
                                    <th>Passager</th>
                                    <th>Dates / Lieux</th>
                                    <th>Commentaire du passager</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for s in signalements %}
                                    <tr>
                                        <td><strong>#{{ s.carSharing.id }}</strong></td>
                                        <td>
                                            <span class="fw-semibold">{{ s.carSharing.user.username }}</span><br>
                                            <a href="mailto:{{ s.carSharing.user.email }}">{{ s.carSharing.user.email }}</a>
                                        </td>
                                        <td>
                                            <span class="fw-semibold">{{ s.passenger.username }}</span><br>
                                            <a href="mailto:{{ s.passenger.email }}">{{ s.passenger.email }}</a>
                                        </td>
                                        <td>
                                            <span class="text-muted">D√©part :</span> {{ s.carSharing.dateStart|date('d/m/Y H:i') }}<br>
                                            <span class="text-muted">Arriv√©e :</span> {{ s.carSharing.dateEnd ? s.carSharing.dateEnd|date('d/m/Y H:i') : 'Non renseign√©e' }}<br>
                                            <span>{{ s.carSharing.startAddress }} ‚Üí {{ s.carSharing.endAddress }}</span>
                                        </td>
                                        <td>
                                            {{ s.comment|default('Aucun commentaire') }}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
